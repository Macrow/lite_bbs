@import "bootstrap";
@import 'compass/css3';
@import 'compass/utilities';
 
body {
  padding-top: 60px;
  background-image: url('<%= asset_path('lite_bbs/shattered.png') %>');
}

#lite_bbs {
  a {
    &:hover { 
      text-decoration: none;
    }
  }
  .right {
    text-align: right;
  }
  .breadcrumb {
    span.search {
      float: right;
    }
    i {
      margin-right: 3px;
    }
  }
  .pagination {
    ul {
      @include float-right;
      background: white;      
    }
  }
  .highlight {
    background-color: yellow;
  }
  .badge_right {
    @include float-right;
  }
}

@import "bootstrap-responsive";